<?xml version="1.0" encoding="UTF-8"?>
<project name="module_appcompat_v7" default="compile.module.appcompat_v7">
  <dirname property="module.appcompat_v7.basedir" file="${ant.file.module_appcompat_v7}"/>
  
  <property name="module.jdk.home.appcompat_v7" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.appcompat_v7" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.appcompat_v7" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.appcompat_v7" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="appcompat_v7.output.dir" value="${module.appcompat_v7.basedir}/../out/production/appcompat_v7"/>
  <property name="appcompat_v7.testoutput.dir" value="${module.appcompat_v7.basedir}/../out/test/appcompat_v7"/>
  
  <path id="appcompat_v7.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="appcompat_v7.module.production.classpath">
    <path refid="${module.jdk.classpath.appcompat_v7}"/>
  </path>
  
  <path id="appcompat_v7.runtime.production.module.classpath">
    <pathelement location="${appcompat_v7.output.dir}"/>
  </path>
  
  <path id="appcompat_v7.module.classpath">
    <path refid="${module.jdk.classpath.appcompat_v7}"/>
    <pathelement location="${appcompat_v7.output.dir}"/>
  </path>
  
  <path id="appcompat_v7.runtime.module.classpath">
    <pathelement location="${appcompat_v7.testoutput.dir}"/>
    <pathelement location="${appcompat_v7.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.appcompat_v7">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.appcompat_v7">
    <patternset refid="excluded.from.module.appcompat_v7"/>
  </patternset>
  
  <path id="appcompat_v7.module.sourcepath">
    <dirset dir="${module.appcompat_v7.basedir}">
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.appcompat_v7" depends="compile.module.appcompat_v7.production,compile.module.appcompat_v7.tests" description="Compile module appcompat_v7"/>
  
  <target name="compile.module.appcompat_v7.production" depends="register.custom.compilers" description="Compile module appcompat_v7; production classes">
    <mkdir dir="${appcompat_v7.output.dir}"/>
    <javac2 destdir="${appcompat_v7.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.appcompat_v7}/javac">
      <compilerarg line="${compiler.args.appcompat_v7}"/>
      <bootclasspath refid="appcompat_v7.module.bootclasspath"/>
      <classpath refid="appcompat_v7.module.production.classpath"/>
      <src refid="appcompat_v7.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.appcompat_v7"/>
    </javac2>
    
    <copy todir="${appcompat_v7.output.dir}">
      <fileset dir="${module.appcompat_v7.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.appcompat_v7.tests" depends="register.custom.compilers,compile.module.appcompat_v7.production" description="compile module appcompat_v7; test classes" unless="skip.tests"/>
  
  <target name="clean.module.appcompat_v7" description="cleanup module">
    <delete dir="${appcompat_v7.output.dir}"/>
    <delete dir="${appcompat_v7.testoutput.dir}"/>
  </target>
</project>